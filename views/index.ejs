<script>
	
	function getcokies(){
         
		 newraw= document.cookie.split(";");
		 for (let index = 0; index < newraw.length; index++) {
			 if(newraw[index].charAt(0)==="c"){
				 return newraw[index].split("=")[1];
			 }
		 }
		 return "[]"
	 }
	 document.getElementById("cartnum").innerHTML= JSON.parse(getcokies()).length;
</script>

